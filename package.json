{
  "name": "zunami-stable",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "lint": "prettier --write 'contracts/**/*.sol' && prettier --write 'scripts/**/*.js' && prettier --write 'test/**/*.ts'",
    "lint:contracts": "prettier --write 'contracts/**/*.sol'",
    "compile": "hardhat clean && hardhat compile",
    "contract:size": "hardhat size-contracts;",
    "fork": "hardhat node",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage  --testfiles 'test/unit/*.ts'",
    "test:verbose": "hardhat test --verbose test/*.ts",
    "deploy:mainnet": "hardhat run --network mainnet ./scripts/deploy.js",
    "deploy:rinkeby": "hardhat run --network rinkeby --gasprice 1000000000 ./scripts/deploy.js",
    "deploy:polygon": "hardhat run --network polygon --gasprice 1000000000 ./scripts/deploy.js",
    "deploy:development": "hardhat run --network development ./scripts/deploy.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZunamiLab/ZunamiStable.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ZunamiLab/ZunamiStable/issues"
  },
  "homepage": "https://zunami.io",
  "devDependencies": {
    "@nomiclabs/buidler": "^1.4.8",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-ganache": "^2.0.1",
    "@nomiclabs/hardhat-truffle5": "^2.0.5",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "4.7.3",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@types/mocha": "^9.1.0",
    "bignumber.js": "^9.0.2",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^16.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.4",
    "hardhat": "^2.9.1",
    "hardhat-contract-sizer": "^2.5.0",
    "hardhat-deploy": "^0.10.5",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.20",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2",
    "waffle": "^0.0.4"
  }
}
